# Homelab Dashboard Environment Configuration
# Copy this file to .env and customize as needed

# Application Settings
PORT=5050

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable logging to file (saves to data/dashboard.log)
# Set to 'true' to enable file logging
LOG_TO_FILE=false

# Security Settings
# SSL/TLS Certificate Verification
# Set to 'false' only in development with self-signed certificates
# WARNING: Disabling SSL verification is insecure!
VERIFY_SSL=true

# Future Configuration (not yet implemented)
# Uncomment and configure when features are available

# Database Configuration
# DB_TYPE=sqlite
# DB_PATH=data/dashboard.db

# Redis Configuration (for caching and background tasks)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Authentication (when implemented)
# JWT_SECRET=your-secret-key-here
# SESSION_SECRET=another-secret-key-here
# ENABLE_AUTH=false

# Performance Tuning
# Settings cache TTL in seconds (default: 60)
# SETTINGS_CACHE_TTL=60
